<script type="text/javascript">
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th class="">Name</th>
            <th class="">Description</th>
            <th class="text-centre">Picture</th>
            <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag idea.picture_url, width: '100%' if idea.picture.present? %></td>
        <td class="btn"><%= link_to 'Show', idea %></td>
        <td class="btn btn-primary"><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button class="btn"><%= link_to 'New Idea', new_idea_path %></button>

