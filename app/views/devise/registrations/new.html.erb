<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
        <%= f.label :first_name, :class => "col-sm-2 col-form-label" %>
        <div class="col">
          <%= f.text_field :first_name, :class => "form-control" %>
        </div>
        <%= f.label :middle_name, :class => "col-sm-2 col-form-label" %>
        <div class="col">
          <%= f.text_field :middle_name, :class => "form-control" %>
        </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, :class => 'col-sm-2 col-form-label' %>
    <div class="col">
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>
    <%= f.label :address, :class => "col-sm-1 col-form-label" %>
    <div class="col">
      <%= f.text_field :address, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :contact, :class => 'col-sm-2 col-form-label' %>
    <div class="col">
      <%= f.text_field :contact, :class => "form-control" %>
    </div>
    <%= f.label :dob, :class => "col-sm-1 col-form-label" %>
    <div class="col">
      <%= f.date_field :dob, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, :class => 'col-sm-2 col-form-label'  %>
    <div class="col-sm-7">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', placeholder: 'example123@gmail.com' %>
    </div>  
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
        <%= f.label :password, :class => 'col-form-label' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
    </div>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation,:class => 'col-sm-3 col-form-label' %><br />
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
